@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div class="container mt-5">
        <form>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" placeholder="Ingresa tu nombre">
            </div>
            <div class="form-group">
                <label for="rol">Selecciona Alumno / Profesor</label>
                <select class="form-control" id="rol">
                    <option>Profesor</option>
                    <option>Alumno</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" onclick="mostrarAlertaEnviar()">Enviar</button>
        </form>
    </div>

    <div id="contenedor-alertas">

    </div>

    @section Scripts{
        <script>
            function mostrarAlertaEnviar(){
                mostrar('se envio el formulario', 'success');
            }

            function mostrarAlerta(mensaje, tipo){
                const alerta = document.createElement("div");
                alerta.innerHTML = '<div class="alert alert-primary" role="alert">A simple primary alert-check it out!</div>';
                const contenedorAlertas = document.getElementById('contenedor-alertas');
                contenedorAlertas.append(alerta)
            }
        </script>
    }

    